<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditTextPreference
        android:title="@string/pref_location_label"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/pref_location_default"
        android:inputType="text"
        android:singleLine="true"/>

    <ListPreference
        android:title="@string/pref_temperatureUnits_label"
        android:key="@string/pref_temperatureUnits_key"
        android:entries="@array/pref_temperatureUnits_entries"
        android:entryValues="@array/pref_temperatureUnits_values"
        android:defaultValue="@string/pref_temperatureUnits_default" />

</PreferenceScreen>